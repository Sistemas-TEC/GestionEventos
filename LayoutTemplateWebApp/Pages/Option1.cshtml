@page
@model LayoutTemplateWebApp.Pages.Option1Model
@{
    ViewData["Title"] = "Calendario de Eventos";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pagina Principal</title>
    <!-- Enlace a Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="site.css">
    <script src="site.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mt-5">
                <h1 class="display-2">Calendario de Eventos</h1>
            </div>
        </div>
        <!-- Botones -->
        <div class="row">
            <div class="col-12 text-center">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-primary">Categoría</button>
                    <button type="button" class="btn btn-primary">Fechas</button>
                    <button type="button" class="btn btn-primary">Ubicaciones</button>
                </div>
            </div>
        </div>
        <!-- Lista de eventos con Carousel -->
        <div class="row mt-4">
            @foreach (var dateEvents in Model.GroupedEvents)
            {
                @*<div class="col-md-12">*@
                    <h3>@dateEvents.Key.ToShortDateString()</h3>
                     var column_number=0;
                    <div class="container"> @* Esta es la clase que agrupa los eventos de la fecha. Se trata cada fecha como una única *@
                    <div class="row">
                      
                        @foreach (var evento in dateEvents.Value)
                        {
                            if (column_number == 3)
                            {
                                @* Salta a la siguiente línea *@
                                <div class="w-100"></div>
                                column_number = 0;
                            }

                            <div class="col-4">
                                @* mb-4 agrega margin bottom tamaño 4. La clase event se puede cambiar, es propia.*@
                                <div class="event mb-4" data-event-id="@evento.idEvent" onclick="showPopup(@evento.idEvent)">
                                    
                                    <div class="card">
                                        <div class="card-body">
                                            <img src="https://picsum.photos/200" class="card-img-top" alt="texto_alternativo">
                                            <h5 class="card-title">@evento.name</h5>
                                            <p class="card-text"><strong>Descripcion:</strong> @evento.description</p>
                                            <p class="card-text"><strong>Cupo Máximo:</strong> @evento.maxCapacity</p>
                                            <p class="card-text"><strong>Organizador:</strong> @evento.organizer</p>
                                            <p class="card-text"><strong>Costo de Entrada:</strong> @evento.entryCost</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            column_number++;
                        }
                    </div>
                </div>
            }
        </div>

    
    <!-- Contenedor del modal -->
    <div class="modal fade" id="eventModal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="eventModalLabel">Título del Evento</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Título:</strong> Descripción del evento</p>
                    <p><strong>Hora:</strong> Hora del evento</p>
                    <!-- Agregar más detalles del evento aquí -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Asistiré</button>
                    <button type="button" class="btn btn-primary">Me interesa</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
