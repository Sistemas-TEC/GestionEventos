@page
@model LayoutTemplateWebApp.Pages.Option1Model
@{
   ViewData["Title"] = "Calendario de Eventos";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pagina Principal</title>
    <link rel="stylesheet" href="site.css">
    <script src="site.js"></script>
</head>
<body>
    <div class="title-container">
        <h1 class="center-title">Calendario de Eventos</h1>
        <div class="button-container">
            <button class="button">Categoría</button>
            <button class="button">Fechas</button>
            <button class="button">Ubicaciones</button>
        </div>
    </div>
<div class="event-list">
    <div class="event-day">
        <h3>Lunes 25 de septiembre</h3>
        <div class="event" onclick="showPopup(1)">
            <div class="event-image">
                <img src="imagen_evento1.jpg" alt="Imagen del evento 1">
            </div>
            <div class="event-details">
                <h4>Evento 1:</h4>
                <p><strong>Título:</strong> Charla Sobre Diseño de Software</p>
                <p><strong>Hora:</strong> 10:00 AM</p>
                <p><strong>Lugar:</strong> Sala de conferencias</p>
                <p><strong>Cupo Máximo:</strong> 100</p>
                <p><strong>Organizador:</strong> ASODEC</p>
            </div>
        </div>
        <div class="event" onclick="showPopup(2)">
            <div class="event-image">
                <img src="imagen_evento2.jpg" alt="Imagen del evento 2">
            </div>
            <div class="event-details">
                <h4>Evento 2:</h4>
                <p><strong>Título:</strong> Charla Sobre Administracion de proyectos</p>
                <p><strong>Hora:</strong> 11:00 AM</p>
                <p><strong>Lugar:</strong> Sala de conferencias</p>
                <p><strong>Cupo Máximo:</strong> 50</p>
                <p><strong>Organizador:</strong> ASODEC</p>
            </div>
        </div>
        <!-- Agregar más eventos aquí -->
    </div>
    <div class="event-day">
        <h3>Martes 26 de septiembre</h3>
        <div class="event">
            <div class="event-image">
                <img src="imagen_evento3.jpg" alt="Imagen del evento 3">
            </div>
            <div class="event-details">
                <h4>Evento 1:</h4>
                <p><strong>Título:</strong> Charla Sobre Investigacion de Operaciones</p>
                <p><strong>Hora:</strong> 9:00 AM</p>
                <p><strong>Lugar:</strong> Sala de conferencias</p>
                <p><strong>Cupo Máximo:</strong> 20</p>
                <p><strong>Organizador:</strong> ASODEC</p>
            </div>
        </div>
    
    <!-- Agregar más días y eventos aquí -->
</div>
<div class="scroll-button scroll-button-left">←</div>
<div class="scroll-button scroll-button-right">→</div>   
<!-- Contenedor del popup -->
<div class="popup" id="eventPopup">
    <div class="popup-content">
        <span class="close" onclick="hidePopup()">&times;</span>
        <h2>Título del Evento</h2>
        <p><strong>Título:</strong> Descripción del evento</p>
        <p><strong>Hora:</strong> Hora del evento</p>
        <!-- Agrega más detalles del evento aquí -->
        <button class="button">Asistiré</button>
        <button class="button">Me interesa</button>
    </div>
</div>
</body>
</html>
