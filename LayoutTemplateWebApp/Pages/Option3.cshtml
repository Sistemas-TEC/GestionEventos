@page
@model Option1Model
@{
    ViewData["Title"] = "Historial";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Historial</title>
    <!-- Enlace a Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="site.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="center-title">Historial</h1>
            </div>
        </div>
        
        <!-- Dos columnas -->
        <div class="row mt-4">
            <div class="col-md-6">
                <h2>Próximos Eventos</h2>
                <!-- Aquí puedes mostrar los próximos eventos -->
                <div class="event" onclick="showPopup(1)">
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="imagen_evento1.jpg" alt="Imagen del evento 1" class="img-fluid">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">Evento 1</h5>
                                    <p class="card-text"><strong>Fecha:</strong> 25 de diciembre</p>
                                    <p class="card-text"><strong>Título:</strong> Charla Sobre Diseño de Software</p>
                                    <p class="card-text"><strong>Hora:</strong> 10:00 AM</p>
                                    <p class="card-text"><strong>Lugar:</strong> Sala de conferencias</p>
                                    <p class="card-text"><strong>Cupo Máximo:</strong> 100</p>
                                    <p class="card-text"><strong>Organizador:</strong> ASODEC</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Agregar más eventos aquí -->
            </div>
            <div class="col-md-6">
                <h2>Eventos Anteriores</h2>
                <!-- Aquí puedes mostrar los eventos anteriores -->
                <div class="event" onclick="showPopup(2)">
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="imagen_evento2.jpg" alt="Imagen del evento 2" class="img-fluid">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">Evento 2</h5>
                                    <p class="card-text"><strong>Fecha:</strong> 20 de diciembre</p>
                                    <p class="card-text"><strong>Título:</strong> Charla Sobre Administración de Proyectos</p>
                                    <p class="card-text"><strong>Hora:</strong> 11:00 AM</p>
                                    <p class="card-text"><strong>Lugar:</strong> Sala de conferencias</p>
                                    <p class="card-text"><strong>Cupo Máximo:</strong> 50</p>
                                    <p class="card-text"><strong>Organizador:</strong> ASODEC</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Agregar más eventos anteriores aquí -->
            </div>
        </div>
    </div>
    
    <!-- Contenedor del modal -->
    <div class="modal fade" id="eventModal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="eventModalLabel">Título del Evento</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Título:</strong> Descripción del evento</p>
                    <p><strong>Hora:</strong> Hora del evento</p>
                    <!-- Agregar más detalles del evento aquí -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Asistiré</button>
                    <button type="button" class="btn btn-primary">Me interesa</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Script de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-5rtj9St7Fq3XRWeGC6zPp19MgV1Fp4eM5pUnR+OGp1Q1ZC1l9RMjw5E5f5Frw5L5C" crossorigin="anonymous"></script>
</body>
</html>
